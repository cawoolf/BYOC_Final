<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/blueAccentColor</item>

        <!-- Other style attributes -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="custom_scrollview_style">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/whiteTextColor</item>
    </style>

    <style name="srollview_textview_style">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:layout_marginBottom">@dimen/scrollView_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/scrollView_margin_top</item>
    </style>

    <style name="custom_tab_style">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="tabSelectedTextColor">@color/blueAccentColor</item>
        <item name="tabIndicatorColor">@color/blueAccentColor</item>
    </style>


</resources>