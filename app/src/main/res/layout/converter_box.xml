<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dp"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorAccent"

    android:layout_margin="16dp">

    <TextView
        android:id="@+id/converter_box_distance_unit_placeholder_1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/converter_box_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="UP1"

        android:gravity="center"

        android:textColor="@color/colorPrimary"
        android:autoSizeTextType="uniform"/>

    <ImageView
        android:id="@+id/converter_box_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:scaleType="center"

        app:layout_constraintTop_toBottomOf="@id/converter_box_distance_unit_placeholder_1"
        app:layout_constraintBottom_toBottomOf="@id/converter_box_distance_unit_placeholder_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/converter_box_distance_unit_placeholder_2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:text="UP2"

        app:layout_constraintTop_toBottomOf="@+id/converter_box_image_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:gravity="center"

        android:textColor="@color/colorPrimary"
        android:autoSizeTextType="uniform" />

</androidx.constraintlayout.widget.ConstraintLayout>