<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    style="@style/custom_scrollview_style">

    <LinearLayout
        android:id="@+id/masterAreaLinearLayout_Preset_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/WA1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_metric_ton"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:id="@+id/WA2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_kilogram"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:id="@+id/WA3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/weight_gram"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:id="@+id/WA4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_ton"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:id="@+id/WA5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_pound"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:id="@+id/WA6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_ounce"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/AA7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/area_square_foot"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/AA8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/area_square_inch"
                    style="@style/srollview_textview_style"/>


            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/WB1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_metric_ton"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:id="@+id/WB2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_kilogram"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:id="@+id/WB3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_gram"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:id="@+id/WB4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_ton"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:id="@+id/WB5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_pound"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:id="@+id/WB6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_ounce"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/WB7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/area_square_foot"
                    style="@style/srollview_textview_style"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/AB8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/area_square_inch"
                    style="@style/srollview_textview_style"/>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>

</LinearLayout>