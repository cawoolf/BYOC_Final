<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/ConverterPreview_ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/homeScreenUIPreview_LinearLayout"

    android:background="@drawable/mybuttonshape">

    <LinearLayout
        android:id="@+id/topUnitTextLeftPreview_LinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="8dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ratioSignPreview_TextView2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/unitANamePreview_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit A Name"
            android:layout_marginEnd="16dp"
            android:textColor="@color/myTextColor"
            android:gravity="start"

            android:layout_weight="1"
            android:layout_marginStart="12dp"

            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/unitAValuePreview_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value A"
            android:textColor="@color/myTextColor"
            android:gravity="end"

            android:layout_weight="1"
            android:textSize="16sp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/ratioSignPreview_TextView2"
        android:layout_width="25dp"
        android:text=":"
        android:textColor="@color/myTextColor"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/topUnitTextLeftPreview_LinearLayout"
        app:layout_constraintEnd_toStartOf="@id/topUnitTextRightPreview_LinearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/converterUIPreview_LinearLayout"/>

    <LinearLayout

        android:id="@+id/topUnitTextRightPreview_LinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"

        app:layout_constraintStart_toEndOf="@id/ratioSignPreview_TextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/unitBValuePreview_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value B"
            android:textColor="@color/myTextColor"
            android:gravity="start"

            android:layout_weight="1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/unitBNamePreview_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit B Name"
            android:layout_marginStart="16dp"
            android:textColor="@color/myTextColor"

            android:gravity="end"

            android:layout_weight="1"
            android:layout_marginEnd="12dp"


            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/converterUIPreview_LinearLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:layout_marginTop="12dp"


        app:layout_constraintTop_toBottomOf="@id/ratioSignPreview_TextView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/converterBuildButtonsPreview_LinearLayout"
        app:layout_constraintEnd_toEndOf="parent">


        <EditText
            android:id="@+id/unitAPreview_EditText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:cursorVisible="true"

            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:singleLine="true"

            android:background="@android:color/darker_gray"

            android:layout_marginStart="12dp"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/equalSignPreview_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="36sp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/myTextColor"
            />

        <EditText
            android:id="@+id/unitBPreview_EditText"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:singleLine="true"

            android:background="@android:color/darker_gray"

            android:layout_marginEnd="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/converterBuildButtonsPreview_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/converterUIPreview_LinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <Button
            android:id="@+id/deleteButtonPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


